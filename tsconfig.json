{
    "compilerOptions": {
      "target": "es6",
      "lib": ["es6"],
      "types": ["reflect-metadata", "node"],
      "typeRoots": [
        "node_modules/@types"
      ],
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./build",
      "esModuleInterop": true,
      "strict": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
    }
  }